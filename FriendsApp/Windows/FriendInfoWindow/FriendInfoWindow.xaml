<Window x:Class="FriendsApp.Windows.FriendInfoWindow.FriendInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FriendsApp.Windows.FriendInfoWindow"
        mc:Ignorable="d"
        Title="{StaticResource AppTitle}" 
        Height="450" Width="800">
    <StackPanel>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="LabelLastName"
                       Content="Last name"/>
                <TextBox x:Name="InputLastName"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label x:Name="LabelFirstName"
                       Content="First name"/>
                <TextBox x:Name="InputFirstName"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label x:Name="LabelDateOfBirth"
                       Content="Date of birth"/>
                <DatePicker x:Name="InputDateOfBirth"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
